{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 144
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "off",
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["dist"]
  }
}
